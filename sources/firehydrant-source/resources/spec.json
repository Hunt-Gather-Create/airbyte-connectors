{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "fireHydrant Spec",
    "type": "object",
    "required": [
      "token",
      "start_date"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "API Token",
        "description": "In order to create token, go to https://app.firehydrant.io/organizations/bots",
        "airbyte_secret": true
      },
      "start_date": {
        "type": "string",
        "title": "Start Date",
        "description": "The date from which you'd like to replicate data for FireHydrant in the ISO 8601 format, i.e YYYY-MM-DDTmm:HH:ssZ. All data generated after this date will be replicated.",
        "examples": [
          "2010-03-27T14:03:51-0800"
        ],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
      },
      "page_size": {
        "type": "number",
        "title": "Page size",
        "default": 10
      },
      "version": {
        "type": "string",
        "title": "API Version",
        "default": "v1",
        "examples": [
          "v1"
        ]
      }
    }
  }
}

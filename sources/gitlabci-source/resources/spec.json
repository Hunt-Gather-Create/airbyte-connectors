{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Gitlab CI Spec",
    "type": "object",
    "required": ["token", "groupName", "projects"],
    "additionalProperties": false,
    "properties": {
      "apiUrl": {
        "type": "string",
        "title": "API URL",
        "airbyte_secret": true
      },
      "apiVersion": {
        "type": "number",
        "title": "API Version",
        "airbyte_secret": true
      },
      "token": {
        "type": "string",
        "title": "Access Token",
        "airbyte_secret": true
      },
      "groupName": {
        "type": "string",
        "title": "Group Name",
        "airbyte_secret": true
      },
      "projects": {
        "type": "array",
        "title": "Project Names",
        "airbyte_secret": true
      },
      "pageSize": {
        "type": "number",
        "title": "Page Size",
        "description": "Pipelines count per request.",
        "airbyte_secret": true
      },
      "maxPipelinesPerProject": {
        "type": "number",
        "title": "Max Pipelines",
        "description": "Maximum pipelines count per project.",
        "airbyte_secret": true
      }
    }
  }
}
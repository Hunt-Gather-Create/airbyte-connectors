{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Customer.io Spec",
    "type": "object",
    "required": [
      "app_api_key",
      "start_date"
    ],
    "additionalProperties": false,
    "properties": {
      "app_api_key": {
        "type": "string",
        "title": "Customer.io App API Key",
        "airbyte_secret": true
      },
      "start_date": {
        "type": "string",
        "title": "Start Date",
        "description": "The date from which you'd like to replicate data for Customer-io in the ISO 8601 format, i.e YYYY-MM-DDTmm:HH:ssZ. All data generated after this date will be replicated.",
        "examples": [
          "2010-03-27T14:03:51-0800"
        ],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
      }
    }
  }
}

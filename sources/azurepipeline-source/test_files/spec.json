{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Azure Pipeline Spec",
    "type": "object",
    "required": [
      "access_token",
      "organization",
      "project"
    ],
    "additionalProperties": false,
    "properties": {
      "access_token": {
        "type": "string",
        "title": "access token of azure",
        "airbyte_secret": true
      },
      "organization": {
        "type": "string",
        "title": "organization"
      },
      "project": {
        "type": "string",
        "title": "project of microsoft azure"
      }, 
      "api_version": {
        "type": "string",
        "title": "api version",
        "default": "6.0-preview.1"
      }
    }
  }
}

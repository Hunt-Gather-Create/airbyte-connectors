{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "StatusPage Spec",
    "type": "object",
    "required": [
      "page_id",
      "api_key",
      "cutoff_days"
    ],
    "additionalProperties": false,
    "properties": {
      "page_id": {
        "type": "string",
        "title": "StatusPage Page ID",
        "airbyte_secret": true
      },
      "api_key": {
        "type": "string",
        "title": "StatusPage API key",
        "airbyte_secret": true
      },
      "cutoff_days": {
        "type": "integer",
        "title": "Cutoff Days",
        "default": 90,
        "description": "Only fetch data updated after cutoff"
      },
      "org_id": {
        "type": "string",
        "title": "StatusPage Organization ID"
      }
    }
  }
}

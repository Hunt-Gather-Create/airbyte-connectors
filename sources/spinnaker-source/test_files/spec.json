{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Spinnaker Spec",
    "type": "object",
    "required": [
      "server_url"
    ],
    "additionalProperties": false,
    "properties": {
      "server_url": {
        "type": "string",
        "title": "Server URL",
        "examples": [
          "https://localhost:8084/"
        ]
      },
      "api_version": {
        "type": "string",
        "title": "API Version",
        "default": "v2"
      },
      "applications": {
        "type": "array",
        "title": "Applications",
        "description": "Use to fetch Pipelines",
        "item": {
          "type": "string"
        }
      },
      "buildMasters": {
        "type": "array",
        "title": "Build Masters",
        "description": "Use to fetch Builds and Jobs",
        "item": {
          "type": "string"
        }
      },
      "pipelineConfigIds": {
        "type": "array",
        "title": "Pipeline Config IDs",
        "description": "Use to fetch Executions",
        "item": {
          "type": "string"
        }
      },
      "limit": {
        "type": "number",
        "title": "Limit",
        "description": "Use to fetch Pipelines and Executions using limit",
        "default": 500
      }
    }
  }
}

{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Backlog Spec",
    "type": "object",
    "required": [
      "apiKey",
      "space",
      "start_date"
    ],
    "additionalProperties": false,
    "properties": {
      "space": {
        "type": "string",
        "title": "Space ID",
        "examples": [
          "devcube"
        ]
      },
      "apiKey": {
        "type": "string",
        "title": "API Key",
        "airbyte_secret": true
      },
      "start_date": {
        "type": "string",
        "title": "Start Date",
        "description": "The date from which you'd like to replicate data for Backlog in the ISO 8601 format, i.e YYYY-MM-DDTmm:HH:ssZ. All data generated after this date will be replicated.",
        "examples": [
          "2010-03-27T14:03:51-0800"
        ],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
      },
      "project_id": {
        "type": [
          "integer",
          "null"
        ],
        "title": "Project ID",
        "description": "Only pull issues from this project. If not set, all issues from all projects will be pulled."
      }
    }
  }
}

{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BuildKite Spec",
    "type": "object",
    "required": [
      "token"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "Token",
        "description": "To create token go to https://buildkite.com/user/api-access-tokens",
        "airbyte_secret": true
      },
      "page_size": {
        "type": "number",
        "title": "Page Size",
        "description": "number of pipelines to fetch per call"
      },
      "max_jobs_per_build": {
        "type": "number",
        "title": "Max Jobs Per Build"
      },
      "organization": {
        "type": "string",
        "title": "organization slug", 
        "description": "If set it will pull all pipelines from only this organization, If no it pull all pipelines from all organizations"
      }
    }
  }
}

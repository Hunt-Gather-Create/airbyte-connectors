{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BuildKite Spec",
    "type": "object",
    "required": [
      "token"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "Token",
        "description": "To create token go to https://buildkite.com/user/api-access-tokens",
        "airbyte_secret": true
      },
      "page_size": {
        "type": "number",
        "title": "Page Size",
        "description": "number of pipelines to fetch per call",
        "airbyte_secret": false
      },
      "max_jobs_per_build": {
        "type": "number",
        "title": "Max Jobs Per Build",
        "description": "max jobs per build",
        "airbyte_secret": false
      },
      "organization": {
        "type": "string",
        "title": "organization slug",
        "description": "organization slug. You can pull pipelines to every organization",
        "airbyte_secret": false
      }
    }
  }
}
{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bamboo Spec",
    "type": "object",
    "required": [
      "token",
      "baseUrl"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "Api token",
        "airbyte_secret": true
      },
      "baseUrl": {
        "type": "string",
        "title": "baseUrl"
      },
      "pageSize": {
        "type": "number",
        "title": "pageSize"
      },
      "cutoffDays": {
        "type": "number",
        "title": "cutoffDays"
      },
      "projectNames": {
        "type": "array",
        "item": {
          "type": "string"
        },
        "title": "projectNames"
      }
    }
  }
}
